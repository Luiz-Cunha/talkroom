<div class="container chatroom p-5" data-controller="client-chatroom-subscription" data-client-chatroom-subscription-chatroom-id-value="<%= @client_chatroom.id %>">
  <h1># Private Chat</h1>

  <div class="messages" data-client-chatroom-subscription-target="messages">
    <% @client_chatroom.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>
    <%= simple_form_for [@client_chatroom, @message],
    html: { data: { action: "turbo:submit-end->client-chatroom-subscription#resetForm" }, class: "d-flex" } do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Your message",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
