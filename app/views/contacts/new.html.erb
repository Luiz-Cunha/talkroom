<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Contact Us</h1>
          <%= simple_form_for @contact, url: contacts_path do |f| %>
            <%= f.input :name, input_html: { class: 'form-control mb-3', placeholder: 'Your Name' } %>
            <%= f.input :email, input_html: { class: 'form-control mb-3', placeholder: 'Your Email' } %>
            <%= f.input :message, input_html: { class: 'form-control mb-3', placeholder: 'Your Message', rows: 5 } %>
            <%= f.button :submit, 'Send Message', class: 'btn btn-primary btn-block mt-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-between px-5 mt-5" style="margin-bottom: 50px;">
<%= link_to 'Back to Home', root_path, class: 'btn btn-sm'%>
</div>
