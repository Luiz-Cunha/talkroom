<div class="justify-content-center">
  <h5 class="card-title"><strong><%= appointment.user.fullname %></strong></h5>
  <p class="card-text"><%= appointment.symptom %></p>
    <div class= "d-flex flex-column justity-content-center">
      <div>
        <strong>Schedule Time:</strong>
        <%= appointment.schedule_time.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
      <div class="d-flex justify-content-end ms-3">
        <%= simple_form_for appointment do |f| %>
          <%= f.input :confirmation, as: :hidden, input_html: { value: true } %>
          <%= f.submit 'Accept', class: 'btn-accept' %>
        <% end %>
      </div>
    </div>
</div>
