<div class="wrap mt-5">
  <div class="row">
    <!-- Informações do Perfil (lado esquerdo) -->
    <div class="col-md-4">
      <div class="card card-profile mb-4">
        <div class="card-body">
          <h2 class="h2">Welcome</h2>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Full Name:</strong> <%= @user.fullname %></p>
          <p><strong>Gender:</strong> <%= @user.gender %></p>
          <p><strong>Location:</strong> <%= @user.location %></p>
          <p><strong>Date of Birth:</strong> <%= @user.birthdate.strftime("%B %d, %Y") if @user.birthdate %></p>
          <p><strong>Issues:</strong> <%= @user.other_issues %></p>
          <p><strong>Consultation History:</strong></p>
          <p><%= @user.consultation_history %></p>
          <%= link_to 'Change Password', edit_user_registration_path, class: 'btn btn- btn-sm btn-change-password' %>
        </div>
      </div>
    </div>

    <!-- Dashboard (lado direito) -->
    <div class="col-md-8">
      <div class="card card-dashboard mb-4">
        <div class="card-body">
          <h1 class="display-4 mb-4 text-center">Pending Appointments</h1>

          <!-- Seção de Consultas -->
          <% if @appointments.any? %>
            <div class="mb-4">
              <ul class="list-group">
                <% @appointments.each do |appointment| %>
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <p><strong>With:</strong> <%= appointment.counsellor.email %></p>
                        <p><strong>Time:</strong> <%= appointment.schedule_time.strftime("%B %d, %Y at %I:%M %p") %></p>
                        <p><strong>Symptom:</strong> <%= appointment.symptom %></p>
                        <p><strong>Confirmed:</strong> <%= appointment.confirmation ? 'Yes' : 'No' %></p>
                      </div>
                      <div class="btn-group-vertical">
                        <%= link_to 'Edit', edit_appointment_path(appointment), class: 'btn  btn-sm' %>
                        <%= link_to 'Delete', appointments, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn  btn-sm' %>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <p class="text-center">You have no appointments.</p>
          <% end %>
        </div>
      </div>

      <!-- Botão para Agendar Consulta -->
      <div class="text-center mt-4">
        <%= link_to 'Book an appointment', new_appointment_path, class: " btn  btn-lg" %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back to Home', root_path, class: 'btn btn-sm mt-5' %>
